<div class="row">
  <div class="col-auto">
    <h2>Welcome!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">post name:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 posts-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
         <p>Created by {{post.user.name}} on {{format_date post.createdAt}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" id= 'deleteBtn' data-id="{{post.id}}">DELETE</button>
        <a href="/profile/posts/edit/{{post.id}}"><button class="btn btn-sm btn-danger" data-id="{{post.id}}">Edit</button></a>
      </div>
    </div>
    {{/each}}
   </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script> 
{{#if posts.length}}
<script src="./js/delete.js"></script>
{{/if}}
