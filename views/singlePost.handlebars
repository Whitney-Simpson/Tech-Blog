<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date createdAt}}</p>
</div>
{{#if loggedIn}}
<form class="form new-comment-form" data-id = '{{id}}'>
  <div class="form-group">
    <label for="content">comment:</label>
    <input class="form-input" type="text" id="content" name="content" />
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" data-id="{{id}}">Submit</button>
  </div>
</form>
{{/if}}
<section>
  {{#each Comments as |comment|}}
    <div>
      <p>
        {{comment.content}}
      </p>
      
       <p>Created on {{format_date comment.createdAt}} 

  {{/each}}
</section>
<script src="../js/comment.js"></script>